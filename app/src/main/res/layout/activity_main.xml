<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:orientation="horizontal">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal">

        <ImageView
                android:id="@+id/laki_laki"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/eggy_mobile"
                android:layout_weight="1" android:contentDescription="TODO"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:text="@string/vs"
                  android:textSize="30sp"/>
        <ImageView android:id="@+id/perempuan"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/faliz_mobile"
                   android:layout_weight="1" android:contentDescription="@string/todo"/>
        <Button android:id="@+id/btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/match"
                android:layout_gravity="center"/>

    </LinearLayout>


</LinearLayout>